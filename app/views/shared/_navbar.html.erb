<div class="listo-nav">
  <%= link_to root_path, class: "left" do %>
    <%= image_tag "logo.svg" %>
    <span>Listo App</span>
  <% end %>
  <div class="right">
    <% if user_signed_in? %>
      <%= current_user.name_or_email %>
      <%= link_to "Sign out", destroy_user_session_path, method: :delete %>
      <%= image_tag current_user.spotify_photo_url, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
    <% else %>
      <%= link_to 'Sign in with Spotify', user_spotify_omniauth_authorize_path %>
    <% end %>
  </div>
</div>

