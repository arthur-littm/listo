<div class="listo-nav">
  <%= link_to root_path, class: "left" do %>
    <%= image_tag "logo.svg" %>
  <% end %>
  <div class="right">
    <% if user_signed_in? %>
      <div class="dropdown">
        <% if current_user.spotify_photo_url %>
          <%= image_tag current_user.spotify_photo_url, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
        <% else %>
          <i class="fas fa-bars dropdown-toggle" id="navbar-wagon-menu" data-toggle="dropdown"></i>
        <% end %>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
              <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
            <% end %>
          </li>
        </ul>
      </div>
    <% else %>
      <%= link_to 'Sign in with Spotify', user_spotify_omniauth_authorize_path %>
    <% end %>
  </div>
</div>

